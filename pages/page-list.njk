---
pagination:
  data: collections.all
  size: 20
  alias: entries
layout: layouts/base.njk
permalink: /page-list/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber }}/{% endif %}
---

<h1>All Pages</h1>

<table>
  <thead>
    <th>URL</th>
    <th>Page Title</th>
  </thead>
  <tbody>
{%- for entry in entries %}
  <tr>
    <td><a class="tag small-caps" href="{{ entry.url }}">{{ entry.url }}</a></td>
    <td>{{ entry.data.title }}</td>
  </tr>
{%- endfor %}
  </tbody>
</table>
